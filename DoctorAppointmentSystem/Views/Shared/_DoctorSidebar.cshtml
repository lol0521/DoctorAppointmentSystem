<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoctorAppointmentSystem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/schedule.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Doctor Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar doctor-sidebar">
                <div class="sidebar-header">
                    <a href="~/">
                        <img src="~/images/logo.png" alt="Logo" class="logo">
                        <h4>Doctor Portal</h4>
                    </a>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Profile" asp-action="Doctor">
                            <i class="fas fa-user-md"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="DoctorSchedule" asp-action="MySchedule">
                            <i class="fas fa-calendar-alt"></i> My Schedule
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="DoctorSchedule" asp-action="Index">
                            <i class="fas fa-calendar-day"></i> Doctor Schedule
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="MyPatient" asp-action="Index">
                            <i class="fas fa-user-injured"></i> My Patients
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="DoctorReview" asp-action="Index">
                            <i class="fas fa-star"></i> Reviews
                        </a>
                    </li>
                   
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="ResetPassword">
                            <i class="fas fa-key"></i> Reset Password
                        </a>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="nav-link btn btn-link">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>

            <!-- Main content -->
            <div class="col-md-9 col-lg-10 main-content">
                <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarContent">
                            <span class="navbar-brand mb-0 h4" style="color:#2874a6; font-weight:700;">
                                @ViewData["Title"]
                            </span>
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                        <img src="@(Context.User.FindFirst("ProfileImage")?.Value ?? "/images/profile-icon.png")"
                                             class="rounded-circle sidebar-profile-image"
                                             width="30" height="30"
                                             onerror="this.src='/images/profile-icon.png'">
                                            @Context.User.FindFirst("DisplayName")?.Value
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" asp-controller="Profile" asp-action="Doctor">My Profile</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Account" asp-action="Logout" method="post">
                                                <button type="submit" class="dropdown-item">Logout</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>