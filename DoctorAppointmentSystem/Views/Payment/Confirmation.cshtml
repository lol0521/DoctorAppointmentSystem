@{
    ViewData["Title"] = "Payment Confirmation";
}
@{
    Layout = "~/Views/Payment/_LayoutPayment.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="text-center">Payment Successful</h3>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-check-circle text-success mb-3" style="font-size: 5rem;"></i>
                    <h4 class="mb-3">Thank you for your payment!</h4>
                    <p class="lead">Amount paid: <strong>$@ViewBag.Amount.ToString("0.00")</strong></p>
                    <p>Your appointment has been confirmed. A receipt has been sent to your email.</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>