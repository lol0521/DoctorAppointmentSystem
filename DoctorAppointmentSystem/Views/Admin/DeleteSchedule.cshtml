@model DoctorAppointmentSystem.Models.DoctorSchedule

@{
    ViewData["Title"] = "Delete Schedule";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <h1>Delete Schedule</h1>
    <div class="admin-actions">
        <a asp-action="DoctorSchedule" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        <h3 class="text-danger">Are you sure you want to delete this schedule?</h3>
        <div class="alert alert-warning">
            <strong>Warning:</strong> This action cannot be undone.
        </div>

        <dl class="row mt-4">
            <dt class="col-sm-3">Schedule ID</dt>
            <dd class="col-sm-9">#SC-@Model.Id.ToString("D4")</dd>

            <dt class="col-sm-3">Doctor</dt>
            <dd class="col-sm-9">@Model.Doctor?.Name</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("MMM dd, yyyy")</dd>

            <dt class="col-sm-3">Time</dt>
            <dd class="col-sm-9">@Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-secondary")">
                    @(Model.IsAvailable ? "Available" : "Unavailable")
                </span>
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="DeleteSchedule">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
        </form>
    </div>
</div>