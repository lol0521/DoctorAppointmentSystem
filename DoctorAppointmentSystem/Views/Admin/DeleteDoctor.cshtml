@model DoctorAppointmentSystem.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Check for active appointments
    var hasActiveAppointments = ViewBag.HasActiveAppointments ?? false;
}

<div class="admin-header">
    <h1>Delete Doctor</h1>
    <div class="admin-actions">
        <a asp-action="Doctors" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        @if (hasActiveAppointments)
        {
            <div class="alert alert-danger">
                <strong>Cannot Delete:</strong> This doctor has active appointments that need to be deleted first.
            </div>
            <div class="mt-3">
                <a asp-action="Appointments" asp-route-doctorId="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-calendar-x"></i> View Appointments
                </a>
            </div>
        }
        else
        {
            <h3 class="text-danger">Are you sure you want to delete this doctor?</h3>
            <div class="alert alert-warning">
                <strong>Warning:</strong> This action cannot be undone.
            </div>

            <div class="row mt-4">
                <div class="col-md-4 text-center">
                    <img src="@(Model.ProfileImage ?? "/images/default-avatar.png")"
                         class="rounded-circle mb-3" width="120" height="120" alt="Doctor">
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Specialty</dt>
                        <dd class="col-sm-9">@Model.Specialty</dd>
                    </dl>
                </div>
            </div>
        }
    </div>

    @if (!hasActiveAppointments)
    {
        <div class="card-footer">
            <form asp-action="DeleteDoctor">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
        </div>
    }
</div>