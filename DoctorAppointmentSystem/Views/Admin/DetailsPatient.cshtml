@model DoctorAppointmentSystem.Models.Patient

@{
    ViewData["Title"] = "Patient Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <h1>Patient Details</h1>
    <div class="admin-actions">
        <a asp-action="Patients" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="@(Model.ProfileImage ?? "/images/default-avatar.png")"
                     class="rounded-circle mb-3" width="150" height="150" alt="Patient">
                <h5>@Model.Name</h5>
                <p class="text-muted">Age: @(ViewBag.Age) years</p>
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4">Gender</dt>
                    <dd class="col-sm-8">@Model.Gender</dd>

                    <dt class="col-sm-4">Date of Birth</dt>
                    <dd class="col-sm-8">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@Model.Address</dd>

                    <dt class="col-sm-4">Medical Records</dt>
                    <dd class="col-sm-8">
                        <a asp-controller="Admin" asp-action="MedicalRecords" asp-route-patientId="@Model.Id"
                           class="btn btn-sm btn-outline-primary">
                            View Records
                        </a>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="EditPatient" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
    </div>
</div>