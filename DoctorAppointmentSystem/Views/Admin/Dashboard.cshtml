@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header bg-dark text-white rounded-3 p-4 mb-4 shadow">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="fw-bold text-uppercase" style="letter-spacing: 1px;">Admin Dashboard</h1>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card bg-danger text-white p-4 rounded shadow-sm d-flex align-items-center">
            <i class="bi bi-people fs-1 me-3"></i>
            <div>
                <h4 class="fw-bold mb-1">@Model.TotalPatients</h4>
                <div class="fs-6">Total Patients</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card bg-warning text-dark p-4 rounded shadow-sm d-flex align-items-center">
            <i class="bi bi-person-badge fs-1 me-3"></i>
            <div>
                <h4 class="fw-bold mb-1">@Model.ActiveDoctors</h4>
                <div class="fs-6">Active Doctors</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card bg-info text-white p-4 rounded shadow-sm d-flex align-items-center">
            <i class="bi bi-calendar-check fs-1 me-3"></i>
            <div>
                <h4 class="fw-bold mb-1">@Model.TodaysAppointments</h4>
                <div class="fs-6">Today's Appointments</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card bg-dark text-white p-4 rounded shadow-sm d-flex align-items-center">
            <i class="bi bi-currency-dollar fs-1 me-3"></i>
            <div>
                <h4 class="fw-bold mb-1">@Model.MonthlyRevenue.ToString("C")</h4>
                <div class="fs-6">Monthly Revenue</div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Section -->
<div class="row g-4">
    <div class="col-lg-8">
        <div class="bg-light border-0 shadow rounded-4 p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-semibold mb-0 text-dark">Appointments Overview</h5>
                <select class="form-select form-select-sm w-auto">
                    <option>Last 7 Days</option>
                    <option>Last 30 Days</option>
                    <option>This Month</option>
                </select>
            </div>
            <canvas id="appointmentsChart" height="300"></canvas>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="bg-light border-0 shadow rounded-4 p-4">
            <h5 class="fw-semibold mb-3 text-dark">Appointment Status</h5>
            <canvas id="statusChart" height="300"></canvas>
        </div>
    </div>
</div>

<!-- Recent Appointments -->
<div class="row mt-4">
    <div class="col-12">
        <div class="bg-white border-0 shadow rounded-4 p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-semibold text-dark">Recent Appointments</h5>
                <a asp-controller="Admin" asp-action="Appointments" class="btn btn-sm btn-outline-danger">View All</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Patient</th>
                            <th>Doctor</th>
                            <th>Date & Time</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in Model.RecentAppointments)
                        {
                            <tr>
                                <td>#AP-@appointment.Id.ToString("D4")</td>
                                <td>@appointment.Patient?.Name</td>
                                <td>@appointment.Doctor?.Name</td>
                                <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy - hh:mm tt")</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(appointment.Status)">
                                        @appointment.Status
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="AppointmentDetails" asp-controller="Admin"
                                       asp-route-id="@appointment.Id"
                                       class="btn btn-sm btn-outline-dark rounded-pill">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Completed" => "bg-success",
            "Confirmed" => "bg-primary",
            "Pending" => "bg-warning",
            _ => "bg-danger"
        };
    }
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Line chart for monthly appointments
            const appointmentsCtx = document.getElementById('appointmentsChart').getContext('2d');
            new Chart(appointmentsCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.MonthlyAppointmentLabels)),
                    datasets: [{
                        label: 'Appointments',
                        data: @Html.Raw(Json.Serialize(Model.MonthlyAppointmentData)),
                        backgroundColor: 'rgba(255, 87, 34, 0.2)',
                        borderColor: 'rgba(255, 87, 34, 1)',
                        borderWidth: 2,
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    plugins: { legend: { display: false } },
                    scales: { y: { beginAtZero: true } }
                }
            });

            // Doughnut chart for appointment statuses
            const statusCtx = document.getElementById('statusChart').getContext('2d');
            new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.AppointmentStatusLabels)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.AppointmentStatusData)),
                        backgroundColor: [
                            '#28a745', // Completed - green
                            '#007bff', // Confirmed - blue
                            '#ffc107', // Pending - yellow
                            '#dc3545'  // Cancelled - red
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    cutout: '70%',
                    plugins: { legend: { position: 'bottom' } }
                }
            });
        });
    </script>
}