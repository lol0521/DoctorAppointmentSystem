@model IEnumerable<DoctorAppointmentSystem.Models.Review>

@{
    ViewData["Title"] = "Patient Reviews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="admin-header">
    <h1>Patient Reviews</h1>
    <div class="admin-actions">
        <div class="row g-2">
            <div class="col-md-3">
                <select id="ratingFilter" class="form-select">
                    <option value="">All Ratings</option>
                    <option value="5">5 Stars</option>
                    <option value="4">4 Stars</option>
                    <option value="3">3 Stars</option>
                    <option value="2">2 Stars</option>
                    <option value="1">1 Star</option>
                </select>
            </div>
            <div class="col-md-3">
                <select id="doctorFilter" class="form-select">
                    <option value="">All Doctors</option>
                    @if (ViewBag.Doctors != null)
                    {
                        foreach (var doctor in ViewBag.Doctors as List<Doctor>)
                        {
                            <option value="@doctor.Id">@doctor.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
                <select id="dateRangeFilter" class="form-select">
                    <option value="">All Dates</option>
                    <option value="Today">Today</option>
                    <option value="ThisWeek">This Week</option>
                    <option value="ThisMonth">This Month</option>
                    <option value="ThisYear">This Year</option>
                </select>
            </div>
            <div class="col-md-3">
                <button id="applyFilters" class="btn btn-primary">
                    <i class="bi bi-funnel"></i> Apply
                </button>
                <button id="clearFilters" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear
                </button>
            </div>
        </div>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        <!-- Sorting Controls -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="sort-controls">
                <span class="me-2">Sort by:</span>
                <div class="btn-group">
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="id" data-sortorder="asc">
                        ID <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="patient" data-sortorder="asc">
                        Patient <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="doctor" data-sortorder="asc">
                        Doctor <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="rating" data-sortorder="desc">
                        Rating <i class="bi bi-arrow-down"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="date" data-sortorder="desc">
                        Date <i class="bi bi-arrow-down"></i>
                    </button>
                </div>
            </div>

            <div class="page-size-control">
                <span class="me-2">Show:</span>
                <select class="form-select form-select-sm d-inline-block" id="pageSize" style="width: 80px;">
                    <option value="6">6</option>
                    <option value="12" selected>12</option>
                    <option value="24">24</option>
                    <option value="48">48</option>
                </select>
            </div>
        </div>

        <div id="reviewsContainer" data-url="@Url.Action("GetReviewsAjax", "Admin")">
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading reviews...</p>
            </div>
        </div>

        <!-- Pagination -->
        <nav aria-label="Reviews pagination" class="mt-3">
            <ul class="pagination justify-content-center" id="pagination">
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#applyFilters').click(function () {
            });

            $('#clearFilters').click(function () {
            });
        });
    </script>
}