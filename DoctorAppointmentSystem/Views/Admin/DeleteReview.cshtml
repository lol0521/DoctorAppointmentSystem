@model DoctorAppointmentSystem.Models.Review

@{
    ViewData["Title"] = "Delete Review";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <h1>Delete Review</h1>
    <div class="admin-actions">
        <a asp-action="Reviews" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        <h3 class="text-danger">Are you sure you want to delete this review?</h3>
        <div class="alert alert-warning">
            <strong>Warning:</strong> This action cannot be undone.
        </div>

        <div class="row mt-4">
            <div class="col-md-4 text-center">
                <img src="@(Model.Patient?.ProfileImage ?? "/images/default-avatar.png")"
                     class="rounded-circle mb-3" width="120" height="120" alt="Patient">
                <h5>@Model.Patient?.Name</h5>
                <p class="text-muted">@Model.Date.ToString("MMM dd, yyyy")</p>
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3">Doctor</dt>
                    <dd class="col-sm-9">@Model.Doctor?.Name</dd>

                    <dt class="col-sm-3">Rating</dt>
                    <dd class="col-sm-9">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="bi @(i <= Model.Rating ? "bi-star-fill text-warning" : "bi-star text-muted")"></i>
                        }
                        (@Model.Rating stars)
                    </dd>

                    <dt class="col-sm-3">Comment</dt>
                    <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Comment) ? "No comment" : Model.Comment)</dd>

                    <dt class="col-sm-3">Date Posted</dt>
                    <dd class="col-sm-9">@Model.Date.ToString("MMM dd, yyyy hh:mm tt")</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <form asp-action="DeleteReview">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
        </form>
    </div>
</div>