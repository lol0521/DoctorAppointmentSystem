@model DoctorAppointmentSystem.Models.MedicalRecord

@{
    ViewData["Title"] = "Delete Medical Record";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <h1>Delete Medical Record</h1>
    <div class="admin-actions">
        <a asp-action="MedicalRecords" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        <h3 class="text-danger">Are you sure you want to delete this medical record?</h3>
        <div class="alert alert-warning">
            <strong>Warning:</strong> This action cannot be undone.
        </div>

        <dl class="row mt-4">
            <dt class="col-sm-3">Record ID</dt>
            <dd class="col-sm-9">#MR-@Model.Id.ToString("D4")</dd>

            <dt class="col-sm-3">Patient</dt>
            <dd class="col-sm-9">@Model.Patient?.Name</dd>

            <dt class="col-sm-3">Blood Type</dt>
            <dd class="col-sm-9">@Model.BloodType</dd>

            <dt class="col-sm-3">Created Date</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="DeleteMedicalRecord">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
        </form>
    </div>
</div>