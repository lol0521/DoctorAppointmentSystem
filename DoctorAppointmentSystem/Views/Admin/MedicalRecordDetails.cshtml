@model DoctorAppointmentSystem.Models.MedicalRecord

@{
    ViewData["Title"] = "Medical Record Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <h1>Medical Record Details</h1>
    <div class="admin-actions">
        <a asp-action="MedicalRecords" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Record ID</dt>
            <dd class="col-sm-9">#MR-@Model.Id.ToString("D4")</dd>

            <dt class="col-sm-3">Patient</dt>
            <dd class="col-sm-9">@Model.Patient?.Name</dd>

            <dt class="col-sm-3">Blood Type</dt>
            <dd class="col-sm-9">@Model.BloodType</dd>

            <dt class="col-sm-3">Height</dt>
            <dd class="col-sm-9">@Model.Height cm</dd>

            <dt class="col-sm-3">Weight</dt>
            <dd class="col-sm-9">@Model.Weight kg</dd>

            <dt class="col-sm-3">Allergies</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Allergies) ? "None" : Model.Allergies)</dd>

            <dt class="col-sm-3">Current Medications</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.CurrentMedications) ? "None" : Model.CurrentMedications)</dd>

            <dt class="col-sm-3">Past Medical History</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.PastMedicalHistory) ? "None" : Model.PastMedicalHistory)</dd>

            <dt class="col-sm-3">Created Date</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>

            @if (Model.UpdatedDate.HasValue)
            {
                <dt class="col-sm-3">Last Updated</dt>
                <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("MMM dd, yyyy")</dd>
            }
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="EditMedicalRecord" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
    </div>
</div>