@model IEnumerable<DoctorAppointmentSystem.Models.MedicalRecord>

@{
    ViewData["Title"] = "Medical Records";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <h1>Medical Records</h1>
    <div class="admin-actions">
        <div class="row g-2">
            <div class="col-md-4">
                <div class="input-group">
                    <input type="text" id="searchInput" class="form-control" placeholder="Search records...">
                    <button class="btn btn-outline-secondary" type="button" id="searchButton">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-3">
                <select id="bloodTypeFilter" class="form-select">
                    <option value="">All Blood Types</option>
                    @{
                        // Safe null-check approach
                        var bloodTypes = ViewBag.BloodTypes as List<string>;
                        if (bloodTypes != null)
                        {
                            foreach (var bloodType in bloodTypes)
                            {
                                if (!string.IsNullOrEmpty(bloodType))
                                {
                                    <option value="@bloodType">@bloodType</option>
                                }
                            }
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button id="applyFilters" class="btn btn-primary">
                    <i class="bi bi-funnel"></i> Apply
                </button>
                <a href="@Url.Action("MedicalRecords")" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </div>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        <!-- Sorting Controls -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="sort-controls">
                <span class="me-2">Sort by:</span>
                <div class="btn-group">
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="id" data-sortorder="asc">
                        ID <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="patient" data-sortorder="asc">
                        Patient <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="bloodtype" data-sortorder="asc">
                        Blood Type <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="created" data-sortorder="desc">
                        Created <i class="bi bi-arrow-down"></i>
                    </button>
                </div>
            </div>

            <div class="page-size-control">
                <span class="me-2">Show:</span>
                <select class="form-select form-select-sm d-inline-block" id="pageSize" style="width: 80px;">
                    <option value="5">5</option>
                    <option value="10" selected>10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                </select>
            </div>
        </div>

        <div id="medicalRecordsTableContainer" data-url="@Url.Action("GetMedicalRecordsAjax", "Admin")">
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading medical records...</p>
            </div>
        </div>

        <!-- Pagination -->
        <nav aria-label="Medical Records pagination" class="mt-3">
            <ul class="pagination justify-content-center" id="pagination">
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        $(document).ready(function () {
            $('#searchButton').click(function () {
                const searchValue = $('#searchInput').val();
            });

            $('#searchInput').keypress(function (e) {
                if (e.which === 13) {
                    $('#searchButton').click();
                }
            });

            $('#bloodTypeFilter').change(function () {
            });

            $('#applyFilters').click(function () {
            });
        });
    </script>
}