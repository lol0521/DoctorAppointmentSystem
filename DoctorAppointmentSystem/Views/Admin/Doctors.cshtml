@model IEnumerable<DoctorAppointmentSystem.Models.Doctor>

@{
    ViewData["Title"] = "Doctors Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="admin-header">
    <h1>Doctors Management</h1>

    <div class="admin-actions">
        <div class="d-flex flex-wrap align-items-center" style="gap: 1.25rem;">
            <div class="input-group" style="width: 300px;">
                <input type="text" id="searchInput" class="form-control"
                       placeholder="Search doctors..." />
                <button class="btn btn-outline-secondary" type="button" id="searchButton">
                    <i class="bi bi-search"></i>
                </button>
            </div>

            <div class="input-group" style="width: 200px;">
                <select class="form-select" id="specialtyFilter">
                    <option value="">All Specialties</option>
                    @if (ViewBag.Specialties != null)
                    {
                        foreach (var specialty in ViewBag.Specialties as List<string>)
                        {
                            <option value="@specialty">@specialty</option>
                        }
                    }
                </select>
                <button class="btn btn-outline-secondary" type="button" id="filterButton">
                    <i class="bi bi-funnel"></i>
                </button>
            </div>

            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Doctor
            </a>
        </div>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        <!-- Sorting Controls -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="sort-controls">
                <span class="me-2">Sort by:</span>
                <div class="btn-group">
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="id" data-sortorder="asc">
                        ID <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="name" data-sortorder="asc">
                        Name <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="specialty" data-sortorder="asc">
                        Specialty <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="email" data-sortorder="asc">
                        Email <i class="bi bi-arrow-up"></i>
                    </button>
                </div>
            </div>

            <div class="page-size-control">
                <span class="me-2">Show:</span>
                <select class="form-select form-select-sm d-inline-block" id="pageSize" style="width: 80px;">
                    <option value="5">5</option>
                    <option value="10" selected>10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                </select>
            </div>
        </div>

        <div id="doctorsTableContainer" data-url="@Url.Action("GetDoctorsAjax", "Admin")">
            <!-- Table will be loaded via AJAX -->
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading doctors...</p>
            </div>
        </div>

        <!-- Pagination -->
        <nav aria-label="Doctors pagination" class="mt-3">
            <ul class="pagination justify-content-center" id="pagination">
            </ul>
        </nav>
    </div>
</div>