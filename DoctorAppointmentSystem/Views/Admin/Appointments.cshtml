@model IEnumerable<DoctorAppointmentSystem.Models.Appointment>

@{
    ViewData["Title"] = "Appointments Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="admin-header">
    <h1>Appointments</h1>
    <div class="admin-actions">
        <div class="row g-2">
            <div class="col-md-3">
                <select id="statusFilter" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="Pending">Pending</option>
                    <option value="Confirmed">Confirmed</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
            <div class="col-md-3">
                <select id="dateRangeFilter" class="form-select">
                    <option value="">All Dates</option>
                    <option value="Today">Today</option>
                    <option value="ThisWeek">This Week</option>
                    <option value="ThisMonth">This Month</option>
                </select>
            </div>
            <div class="col-md-3">
                <select id="doctorFilter" class="form-select">
                    <option value="">All Doctors</option>
                    @if (ViewBag.Doctors != null)
                    {
                        foreach (var doctor in ViewBag.Doctors as List<Doctor>)
                        {
                            <option value="@doctor.Id">@doctor.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
                <select id="patientFilter" class="form-select">
                    <option value="">All Patients</option>
                    @if (ViewBag.Patients != null)
                    {
                        foreach (var patient in ViewBag.Patients as List<Patient>)
                        {
                            <option value="@patient.Id">@patient.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-12 mt-2">
                <button id="applyFilters" class="btn btn-primary me-2">
                    <i class="bi bi-funnel"></i> Apply Filters
                </button>
                <button id="clearFilters" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </button>
                <a asp-action="CreateAppointment" class="btn btn-success float-end">
                    <i class="bi bi-plus-circle"></i> New Appointment
                </a>
            </div>
        </div>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        <!-- Sorting Controls -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="sort-controls">
                <span class="me-2">Sort by:</span>
                <div class="btn-group">
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="id" data-sortorder="asc">
                        ID <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="patient" data-sortorder="asc">
                        Patient <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="doctor" data-sortorder="asc">
                        Doctor <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="date" data-sortorder="asc">
                        Date <i class="bi bi-arrow-up"></i>
                    </button>
                    <button class="btn btn-outline-secondary btn-sm sort-btn" data-sortby="status" data-sortorder="asc">
                        Status <i class="bi bi-arrow-up"></i>
                    </button>
                </div>
            </div>

            <div class="page-size-control">
                <span class="me-2">Show:</span>
                <select class="form-select form-select-sm d-inline-block" id="pageSize" style="width: 80px;">
                    <option value="5">5</option>
                    <option value="10" selected>10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                </select>
            </div>
        </div>

        <div id="appointmentsTableContainer" data-url="@Url.Action("GetAppointmentsAjax", "Admin")">
            <!-- Table will be loaded via AJAX -->
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading appointments...</p>
            </div>
        </div>

        <!-- Pagination -->
        <nav aria-label="Appointments pagination" class="mt-3">
            <ul class="pagination justify-content-center" id="pagination">
            </ul>
        </nav>
    </div>
</div>