@model DoctorAppointmentSystem.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <h1>Delete Appointment</h1>
    <div class="admin-actions">
        <a asp-action="Appointments" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        <h3 class="text-danger">Are you sure you want to delete this appointment?</h3>
        <div class="alert alert-warning">
            <strong>Warning:</strong> This action cannot be undone.
        </div>

        <dl class="row mt-4">
            <dt class="col-sm-3">Appointment ID</dt>
            <dd class="col-sm-9">#AP-@Model.Id.ToString("D4")</dd>

            <dt class="col-sm-3">Patient</dt>
            <dd class="col-sm-9">@Model.Patient?.Name</dd>

            <dt class="col-sm-3">Doctor</dt>
            <dd class="col-sm-9">@Model.Doctor?.Name</dd>

            <dt class="col-sm-3">Date & Time</dt>
            <dd class="col-sm-9">@Model.AppointmentDate.ToString("f")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="DeleteAppointment">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
        </form>
    </div>
</div>