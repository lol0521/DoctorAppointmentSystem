@model DoctorAppointmentSystem.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var hasActiveAppointments = ViewBag.HasActiveAppointments ?? false;
}

<div class="admin-header">
    <h1>Delete Patient</h1>
    <div class="admin-actions">
        <a asp-action="Patients" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        @if (hasActiveAppointments)
        {
            <div class="alert alert-danger">
                <strong>Cannot Delete:</strong> This patient has active appointments that need to be deleted first.
            </div>
            <div class="mt-3">
                <a asp-action="Appointments" asp-route-patientId="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-calendar-x"></i> View Appointments
                </a>
            </div>
        }
        else
        {
            <h3 class="text-danger">Are you sure you want to delete this patient?</h3>
            <div class="alert alert-warning">
                <strong>Warning:</strong> This action cannot be undone.
            </div>

            <div class="row mt-4">
                <div class="col-md-4 text-center">
                    <img src="@(Model.ProfileImage ?? "/images/default-avatar.png")"
                         class="rounded-circle mb-3" width="120" height="120" alt="Patient">
                    <h5>@Model.Name</h5>
                    <p class="text-muted">Age: @(ViewBag.Age) years</p>
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>

                        <dt class="col-sm-4">Medical Records</dt>
                        <dd class="col-sm-8">
                            @await Component.InvokeAsync("PatientRecordCount", new { patientId = Model.Id })
                        </dd>
                    </dl>
                </div>
            </div>
        }
    </div>

    @if (!hasActiveAppointments)
    {
        <div class="card-footer">
            <form asp-action="DeletePatient">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </form>
        </div>
    }
</div>