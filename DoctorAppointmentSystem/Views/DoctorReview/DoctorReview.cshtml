@model IEnumerable<DoctorAppointmentSystem.Models.Review>

@{
    ViewData["Title"] = "Doctor Reviews";
    Layout = "~/Views/Shared/_DoctorSidebar.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Doctor Reviews</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No reviews available yet.</div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Patient</th>
                    <th>Rating</th>
                    <th>Comment</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model)
                {
                    <tr>
                        <td>@review.Patient?.Name</td>
                        <td>
                            @for (int i = 0; i < review.Rating; i++)
                            {
                                <i class="fas fa-star text-warning"></i>
                            }
                            @for (int i = review.Rating; i < 5; i++)
                            {
                                <i class="far fa-star text-muted"></i>
                            }
                        </td>
                        <td>@review.Comment</td>
                        <td>@review.Date.ToString("dd MMM yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>