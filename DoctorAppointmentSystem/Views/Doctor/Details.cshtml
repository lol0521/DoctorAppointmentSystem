@using System.Security.Claims
@model DoctorAppointmentSystem.ViewModels.ReviewViewModel
@{
    ViewData["Title"] = "Doctor Profile";
    Layout = "_Layout";
    var doctor = ViewBag.Doctor as Doctor;
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Back Header -->
<div class="details-header">
    <div class="details-header-left">
        <a href="/Doctor/index">
            <i class="bi bi-arrow-left"></i> Back to Doctors
        </a>
    </div>
    <div class="details-header-right">
        Viewing Doctor Profile
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/details.css" />
}

<div class="container mt-4">
    <div class="row">
        <!-- Doctor Profile -->
        <div class="col-md-4">
            <div class="card">
                <img src="@(doctor.ProfileImage ?? "/images/doctor-placeholder.jpg")"
                     class="card-img-top" alt="@doctor.Name"
                     style="height: 300px; object-fit: cover;">
                <div class="card-body">
                    <h3>@doctor.Name</h3>
                    <p class="text-primary h5">@doctor.Specialty</p>

                    <div class="rating-section mt-3">
                        <div class="d-flex align-items-center">
                            <div class="stars">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi bi-star@(i <= Model.AverageRating ? "-fill" : "") text-warning"></i>
                                }
                            </div>
                            <span class="ms-2">@Model.AverageRating.ToString("0.0")</span>
                            <span class="text-muted ms-2">(@Model.TotalReviews reviews)</span>
                        </div>
                    </div>

                    <hr>
                    <p><i class="bi bi-envelope"></i> <strong>Email:</strong> @doctor.Email</p>
                    <p><i class="bi bi-telephone"></i> <strong>Phone:</strong> @doctor.PhoneNumber</p>
                    <p><i class="bi bi-gender-ambiguous"></i> <strong>Gender:</strong> @doctor.Gender</p>
                </div>
            </div>
        </div>

        <!-- Reviews Section -->
        <div class="col-md-8">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Write a Review</h5>
                        <small class="text-muted">Only patients can leave reviews for doctors.</small>
                    </div>
                    <div class="card-body">
                        @{
                            var userRole = User.FindFirstValue(ClaimTypes.Role);
                            if (userRole == "Patient")
                            {
                                <form asp-action="AddReview" method="post" id="reviewForm" onsubmit="return validateForm()">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" asp-for="DoctorId" />

                                    <div class="mb-3">
                                        <label class="form-label">Your Rating *</label>
                                        <div class="rating-input">
                                            @for (int i = 5; i >= 1; i--)
                                            {
                                                <input type="radio" id="star@(i)" name="Rating" value="@i" required />
                                                <label for="star@(i)" class="bi bi-star"></label>
                                            }
                                        </div>
                                        <span asp-validation-for="Rating" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Comment" class="form-label">Your Review</label>
                                        <textarea asp-for="Comment" class="form-control" rows="3"
                                                  placeholder="Share your experience with this doctor..."
                                                  name="Comment"></textarea>
                                        <span asp-validation-for="Comment" class="text-danger"></span>
                                    </div>

                                    <button type="submit" class="btn btn-primary" id="submitBtn">Submit Review</button>
                                </form>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i>
                                    Doctors cannot leave reviews for other doctors.
                                    Please use a patient account to submit a review.
                                </div>
                            }
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <a href="/Account/Login" class="btn btn-primary">Login</a> to leave a review.
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5>Patient Reviews (@Model.TotalReviews)</h5>
                </div>
                <div class="card-body">
                    @if (Model.ExistingReviews.Any())
                    {
                        foreach (var review in Model.ExistingReviews)
                        {
                            <div class="review-item mb-4 pb-3 border-bottom">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>@review.Patient?.Name</strong>
                                        <div class="stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="bi bi-star@(i <= review.Rating ? "-fill" : "") text-warning"></i>
                                            }
                                        </div>
                                    </div>
                                    <small class="text-muted">@review.Date.ToString("MMM dd, yyyy")</small>
                                </div>
                                <p class="mt-2 mb-0">@review.Comment</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No reviews yet. Be the first to review!</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .rating-input {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
    }

        .rating-input input {
            display: none;
        }

        .rating-input label {
            cursor: pointer;
            font-size: 1.5rem;
            color: #ddd;
            transition: color 0.2s;
        }

            .rating-input input:checked ~ label,
            .rating-input label:hover,
            .rating-input label:hover ~ label {
                color: #ffc107;
            }

        .rating-input input:checked ~ label {
            color: #ffc107;
        }

    .stars {
        color: #ffc107;
    }

    .review-item {
        padding: 0;
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('reviewForm');
        const submitBtn = document.getElementById('submitBtn');

        if (form) {
            form.addEventListener('submit', function(e) {
                console.log('Form submitted - traditional POST');

                const formData = new FormData(form);
                for (let [key, value] of formData.entries()) {
                    console.log(key + ': ' + value);
                }

                // Basic validation
                const ratingSelected = document.querySelector('input[name="Rating"]:checked');
                if (!ratingSelected) {
                    e.preventDefault();
                    alert('Please select a rating');
                    return false;
                }

                // Show loading state
                submitBtn.disabled = true;
                submitBtn.innerHTML = 'Submitting...';
                return true;
            });
        }
    });
</script>