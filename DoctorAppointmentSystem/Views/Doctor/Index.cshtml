@model IEnumerable<DoctorAppointmentSystem.Models.Doctor>
@{
    ViewData["Title"] = "Our Doctors";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/doctor.css" />
}

<div class="container mt-4">

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-6">
                    <input type="text" name="searchString" class="form-control"
                           placeholder="Search doctors by name or specialty..."
                           value="@ViewData["CurrentFilter"]" />
                </div>
                <div class="col-md-4">
                    <select name="specialtyFilter" class="form-select" asp-items="ViewBag.Specialties">
                        <option value="">All Specialties</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Doctors Grid -->
    <div class="doctors-grid-wrapper" style="max-height: 70vh; overflow-y: auto;">
        <div class="row">
            @foreach (var doctor in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 doctor-card clickable-card"
                         data-href="@Url.Action("Details", new { id = doctor.Id })">
                        <img src="@(doctor.ProfileImage ?? "/images/doctor-placeholder.jpg")"
                             class="card-img-top" alt="@doctor.Name"
                             style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@doctor.Name</h5>
                            <p class="card-text text-primary">@doctor.Specialty</p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-envelope"></i> @doctor.Email<br>
                                    <i class="bi bi-telephone"></i> @doctor.PhoneNumber
                                </small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="@Url.Action("Details", new { id = doctor.Id })"
                               class="btn btn-outline-primary w-100">
                                View Profile & Reviews
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> No doctors found matching your criteria.
            </div>
        }
    </div>

</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".clickable-card").forEach(function (card) {
            card.addEventListener("click", function (e) {
                // Prevent click from firing when clicking the button itself
                if (!e.target.closest('a')) {
                    window.location.href = this.dataset.href;
                }
            });
        });
    });
</script>