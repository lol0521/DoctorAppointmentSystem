@{
    Layout = null;
}

@model DoctorAppointmentSystem.ViewModels.PatientViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Book Appointment - Step 2</title>
    <link rel="stylesheet" href="~/css/appointment.css" asp-append-version="true">
</head>
<body>
    <div class="appointment-container">
        <div class="progress-bar">
            <div class="progress-step completed" data-title="Select Doctor" data-step="1"></div>
            <div class="progress-step active" data-title="Patient Details" data-step="2"></div>
            <div class="progress-step" data-title="Confirmation" data-step="3"></div>
        </div>

        <h1>Patient Details</h1>

        <form method="post" asp-controller="Appointment" asp-action="Step2">
            <div class="form-group">
                <label class="required-field">Patient's Name</label>
                <input type="text" asp-for="Name" required />
            </div>

            <div class="form-group">
                <label class="required-field">Date of Birth</label>
                <input type="date" asp-for="DateOfBirth" required />
            </div>

            <div class="form-group">
                <label class="required-field">Contact Number</label>
                <input type="tel" asp-for="PhoneNumber" required />
            </div>

            <div class="form-group">
                <label class="required-field">Email</label>
                <input type="email" asp-for="Email" required />
            </div>
            
            <div class="checkbox-group">
                <label><input type="radio" name="marketing" value="agree" required /> I consent to receive updates and reminders</label>
                <label><input type="radio" name="marketing" value="disagree" /> I prefer not to receive updates</label>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Next</button>
            </div>
        </form>
    </div>
</body>
</html>